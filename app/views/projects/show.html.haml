.project
  %h1.title= @project.url.blank? ? @project.name : "#{link_to @project.name, @project.url} <span>(View Site)</span>"

  .images
    = render :partial => 'images'

  %p= @project.description
  %p= "Role: #{@project.role}"
  %p= "Duration: #{@project.duration}"

  - content_for :sidebar do
    - if admin?
      %p.admin-links
        = link_to 'Edit', edit_project_path(@project)