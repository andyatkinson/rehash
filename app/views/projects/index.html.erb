<% title t(:projects) %>

<div>
  <ul class="thumbnails">
    <% @projects.each do |project| %>
      <li class="span3">
        <div class="thumbnail">
          <img src="<%= project_image_url(project) %>" alt="<%= h(project.name) %>">
          <div class="caption">
            <h3><%= h(project.name) %></h3>
            <p><a href='<%= "#{project_path(project)}" %>' class='btn btn-primary'>Details</a></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
