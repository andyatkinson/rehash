<div class='project_form'>
  <% form_for @project, :html => {:class => 'form'} do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :name %>
      <br>
      <%= f.text_field :name %>
    </br>
    <p>
      <%= f.label :description %>
      <span><%= "Plain HTML only" %></span>
      <br>
      </br>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :role %>
      <br>
      </br>
      <%= f.text_field :role %>
    </p>
    <p>
      <%= f.label :url %>
      <span><%= "e.g. http://www.company.com" %></span>
      <br>
      </br>
      <%= f.text_field :url %>
    </p>
    <p>
      <%= f.label :duration %>
      <br>
      </br>
      <%= f.text_field :duration %>
    </p>
    <p>
      <%= f.label :completed_on %>
      <br>
      </br>
      <%= f.date_select :completed_on %>
    </p>
    <% if !@project.new_record? %>
      <p><%= link_to 'Add Screenshots to project', new_upload_project_path(@project) %></p>
    <% end %>
    <p>
      <%= f.submit "Save" %>
      <%= link_to "Cancel", projects_path, :class => 'cancel' %>
    </p>
  </p>
  <% end %>
</div>
