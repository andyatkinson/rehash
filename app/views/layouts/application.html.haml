!!! Strict
%html{html_attrs}
  
  %head
    %title
      = "#{website.name} -"
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    %meta{ :name => "description", :content => yield(:meta_description) || website.tagline }
    %meta{ :name => "keywords", :content => yield(:meta_keywords) || website.default_tags }
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'jquery-1.3.2.min', 'search_box', 'admin'
    = yield(:head)
  
  %body
    - if admin?
      #admin-area
        %span.login= link_to 'Logout', logout_path
        %ul
          %li= link_to 'Home', root_path
          %li= "#{link_to 'New Article', new_article_path} #{link_to '(all)', articles_path}"
          %li= "#{link_to 'New Page', new_page_path} #{link_to '(all)', pages_path}"
          %li= "#{link_to 'New Project', new_project_path} #{link_to '(all)', projects_path}"
          %li= "#{link_to 'New Tag', new_tag_path} #{link_to '(all)', tags_path}"
          %li= "#{link_to 'Comments', comments_path}"
          %li= "#{link_to 'Edit Site', edit_site_path(website), :id => 'foo'}"
          
    #headline
      %h1= link_to website.name, root_path
      %h2= website.tagline
    #wrapper
      #container
        #main
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash_#{name}"

          - if show_title?
            %h1=h yield(:title)

          = yield
        #sidebar
          #search
            - form_tag search_path, :method => 'get' do
              = text_field_tag :q, ''
              = submit_tag "Go", :name => nil
            = link_to image_tag('feed.png', :title => 'Subscribe to this site'), feed_path
          #left
            %h4= 'Pages'
            %ul
              .pages
                - for page in Page.released
                  %li= link_to page.name, page
          #right
            = yield(:sidebar)
        .clear
      #footer
        = "Copyright #{Time.now.year} &copy; #{website.owner_name}"
      #powered-by
        = "<em>Powered by</em> #{link_to 'rehash', 'http://webandy.com'}"