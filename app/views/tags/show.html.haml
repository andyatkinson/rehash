- title "Tag"

%div= "Name: #{h @tag.name}"

- content_for :sidebar do
  %p.admin-links
    = link_to "Edit", edit_tag_path(@tag), :id => "edit_tag_#{@tag.id}"
    = link_to "Destroy", @tag, :confirm => 'Are you sure?', :method => :delete, :id => "delete_tag_#{@tag.id}"

.create= link_to 'Create another', new_tag_path
.back= link_to "&larr; Back to tags", tags_path