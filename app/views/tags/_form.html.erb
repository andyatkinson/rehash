<h4><%= 'Existing tags' %></h4>

<ul class='tag'>
  <% for tag in Tag.all %>
    <li><%= link_to tag.name, tag %></li>
  <% end %>
</ul>

<% form_for @tag, :html => {:class => 'form'} do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </br>
  <p>
    <%= f.submit "Submit" %>
    <%= link_to "Cancel", @tag, :class => 'cancel' %>
  </p>
</p>
<% end %>